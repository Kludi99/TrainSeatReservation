@model TrainSeatReservation.Commons.Dto.RouteDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj</h1>
<div class="admin-table">
    <h4>Trasa</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrainId" class="control-label"></label>
                    <select asp-for="TrainId" class="form-control" asp-items="ViewBag.TrainId"></select>
                    <span asp-validation-for="TrainId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn" />
                </div>
            </form>
        </div>
    </div>

    <div class="back">
        <a asp-action="Index">Powrót</a>
    </div>
</div>
