@model TrainSeatReservation.Commons.DisplayItems.TicketSummaryView;

<div class="summary">
    <div class="row">
        <h2>Podsumowanie</h2>
        <div class="col-12">

            <div class="row">
                <div class="col-6">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" readonly />
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <label asp-for="Surname" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Surname" class="form-control" readonly />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Email" class="form-control" readonly />
                </div>
            </div>
            @if (Model != null && Model.PhoneNumber != null)
            {
                <div class="row">
                    <div class="col-6">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="PhoneNumber" class="form-control" readonly />
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-6">
                    <label asp-for="TripDate" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="TripDate" class="form-control" readonly />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label>Stacja początkowa</label>
                </div>
                <div class="col-6">
                    <input asp-for="DepartureTrainStation.Station.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label>Stacja końcowa</label>
                </div>
                <div class="col-6">
                    <input asp-for="ArrivalTrainStation.Station.Name" class="form-control" readonly />
                </div>
            </div>
            @if (Model != null)
            {
                @foreach (var item in Model.TicketDiscounts)
                {
                    <div class="row">
                        <div class="col-6">
                            <label>Rodzaj zniżki </label>
                        </div>
                        <div class="col-6">
                            <input asp-for="@item.Discount.Name" class="form-control" readonly />
                        </div>
                        <div class="col-6">
                            <label>Ilość </label>
                        </div>
                        <div class="col-6">
                            <input asp-for="@item.Count" class="form-control" readonly />
                        </div>
                    </div>
                }
            }
            @foreach (var item in Model.Seats)
            {
                <div class="row">
                    <div class="col-6">
                        <label>Siedzenia </label>
                    </div>
                    <div class="col-6">
                        @{string seats = string.Join(";", item.Seats); }
                        <input value=@seats class="form-control" readonly />
                    </div>
                    <div class="col-6">
                        <label>W wagonie numer </label>
                    </div>
                    <div class="col-6">
                        <input asp-for="@item.CarriageId" class="form-control" readonly />
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-6">
                    <label>Cena</label>
                </div>
                <div class="col-6">
                    <input value="@Model.Price.ToString("C")" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group">
                <a asp-action="PaymentWithPaypal" asp-controller="Payment">Przejdź do płatności</a>
            </div>

        </div>

        </div>
</div>